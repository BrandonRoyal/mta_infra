{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "outputs": {},
    "parameters": {
      "prefix": {
        "type": "string",
        "metadata": {
          "description": "Prefix used for all resources"
        },
        "minLength": 3,
        "maxLength": 7
      },
      "domainName": {
        "type": "string",
        "defaultValue": "broyal.local",
        "metadata": {
          "description": "AD Domain Name"
        }
      },
      "workCount": {
        "type": "int",
        "defaultValue": 3,
        "metadata": {
          "description": "UCP Worker Count"
        }
      },
      "scriptsBaseUri": {
        "type": "string",
        "defaultValue": "https://raw.githubusercontent.com/BrandonRoyal/mta_infra/master/azure/scripts/" 
      }
    },
    "variables": {
      "vmNamePrefix": "[concat(parameters('prefix'), '-ad')]"
    },
    "resources": [
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmNamePrefix'), '/ad_pt2_scriptextension')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', variables('vmNamePrefix'))]"
            ],
            "tags": {
              "displayName": "[concat(parameters('prefix'), '_ad_pt2_', 'extension')]"
            },
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "CustomScriptExtension",
              "typeHandlerVersion": "1.7",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": [
                  "[concat(parameters('scriptsBaseUri'), 'configure-ad.ps1')]"
                ],
                "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -Noninteractive -File configure-ad.ps1 -DomainName ', parameters('domainName'), ' -MachinePrefix ', parameters('prefix'), ' -WorkCount ', parameters('workCount'))]"
              }
            }
        }
    ]
  }